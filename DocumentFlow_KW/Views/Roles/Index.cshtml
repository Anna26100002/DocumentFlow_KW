@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
    <div class="mx-auto" style="padding: 3%">
        <h2 class="h3 mb-3 fw-normal">Список ролей</h2>
        <table class="table">
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        @*<form method="post" asp-action="Initialize">
                <button type="submit" class="btn btn-primary">Инициализировать</button>
            </form>*@
        <a asp-action="Create">Добавить роль</a>
        <a asp-action="UserList">Список пользователей</a>
        </div>
