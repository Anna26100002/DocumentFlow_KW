@model DocumentFlow_KW.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<div class="mx-auto" style="padding: 3%">
    <h1 class="h3 mb-3 fw-normal">Редактирование пользователя</h1>
    <form asp-action="Edit" asp-controller="Profile">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Login" class="control-label">Логин</label>
            <input type="text" asp-for="Login" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Fio" class="control-label">ФИО</label>
            <input type="text" asp-for="Fio" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label">Должность</label>
            <input type="text" asp-for="Position" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Year" class="control-label">Год рождения</label>
            <input type="number" asp-for="Year" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Chief" class="control-label">Руководитель</label>
            <br />
            <select asp-for="Chief" class="form-select">
                @*<option selected>@Model.FioUsers </option>*@
                <option selected></option>
                @{ int i = 1;
                    @foreach (var user in Model.FioUsers)
                    {
                        if (Equals(user.Fio + " (" + user.Position + ")", Model.FioPosition) == true)
                        {
                            continue;
                        }
                        <option>@user.Fio (@user.Position)</option>
                        //<option>@user.Fio</option>
                        i++;
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </form>
</div>